<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.details_pokemon.iu.DetailsPokemonFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/container2"
            >


            <TextView
                android:id="@+id/itTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="20dp"
                style="@style/TextAppearance.AppCompat.Large"/>


            <ImageView
                android:id="@+id/itImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itTitle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />





        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/container"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:id="@+id/itId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="ID"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:id="@+id/itHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="altura"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/itId"
                style="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:id="@+id/itWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="peso"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/itHeight"
                style="@style/TextAppearance.AppCompat.Large"/>

        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>